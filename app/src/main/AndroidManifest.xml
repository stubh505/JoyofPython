<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androvista.kaustubh.joyofpython">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AllVideosActivity"
            android:label="@string/title_activity_all_videos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoadActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".YoutubeVideoActivity" />
        <activity
            android:name=".ChapterWiseActivity"
            android:label="@string/title_activity_chapter_wise"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ChapterActivity"
            android:label="@string/title_activity_chapter"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WeekWiseActivity"
            android:label="@string/title_activity_week_wise"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".WeekActivity"
            android:label="@string/title_activity_week"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LinkActivity"
            android:label="@string/title_activity_link"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>